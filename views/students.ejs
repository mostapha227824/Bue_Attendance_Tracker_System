<!-- views/students.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student List</title>
</head>
<body>
    <h1>Student List</h1>
    <ul>
        <% students.forEach(student => { %>
            <li><%= student.name %> (Roll Number: <%= student.rollNumber %>, Attendance: <%= student.attendance ? 'Present' : 'Absent' %>)</li>
        <% }); %>
    </ul>
</body>
</html>
